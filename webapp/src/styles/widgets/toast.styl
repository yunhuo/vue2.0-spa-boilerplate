.toast {
	position: fixed;
	z-index: 1001;

	&.p-top {
		top: 60px;
	}
	&.p-bottom {
		bottom: 10px;
	}
	&.p-left {
		left: 10px;
	}
	&.p-right {
		right: 10px;
	}
}

.toast-item {
	z-index 1000;
	padding-bottom: 10px;
	//transform: translateY(0);
	//transition: transform .2s ease-out, opacity .3s ease-out;
	backface-visibility: hidden;

	&._default .toast-message {
		background-color: rgba($color-black-light, .9);
	}
	&._info .toast-message {
		background-color: rgba($color-blue, .9);
	}
	&._success .toast-message {
		background-color:  rgba($color-green, .9);
	}
	&._warning .toast-message {
		background-color:  rgba($color-yellow, .9);
	}
	&._error .toast-message {
		background-color:  rgba($color-red, .9);
	}
}

.toast-message {
	padding: 15px 20px 15px 20px;
	color: white;
}

.toast-close {
	cursor: pointer;
	position: absolute;
	right: 5px;
	top: 5px;
	width: 14px;
	height: 14px;
	opacity: .7;
	transition: opacity .15s ease-in-out;
	backface-visibility: hidden;

	&:hover {
		opacity: .9;
	}

	&::before,
	&::after {
		content: '';
		position: absolute;
		top: 6px;
		width: 14px;
		height: 2px;
		background-color: white;
	}

	&::before {
		transform: rotate(45deg);
	}

	&::after {
		transform: rotate(-45deg);
	}
}

/** toast transition **/
.toast-enter-active, .toast-leave-active {
    transition: all 0.4s;
}

.toast-enter,
.toast-leave-active {
	visibility: hidden;
	transform: translate3d(100%, 0, 0);
	opacity: 0;
}
