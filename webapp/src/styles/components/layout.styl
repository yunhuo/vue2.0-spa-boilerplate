/** app header */
.app-header {
	background-color: white;
	position: fixed;
	top: 0;
	width: 100%;
	padding: 16px 0 0 0;
	z-index 2;
	padding-right: 4%;
	height: 44px;
	clearfix();
	.header {
		.img-head {
			height: 28px;
			width: 28px;
			circle();
			display: inline-block;
			vertical-align: middle;
		}
		.title {
			line-height: 100%;
			display: inline-block;
			vertical-align: middle;
		}
		.icon-down,.icon-up {
			color: $color-black;
		}
	}

	.dropdown {
		position: absolute;
		top: 60px;
		right: 0;
		z-index: 1005;
		min-width 160px;
		text-align: left;
		background: #fff;
		box-shadow: 0 0 10px rgba(12, 12, 12, 0.26);
		display none;
		.item {
			text-align: center;
			padding: 12px 4px;
		}
	}
}

/** app footer */
.app-footer {
	position: fixed;
	bottom: 0;
	width: 100%;
	height: 52px;
	line-height 52px;
	z-index 100;
	background-color: #fff;
}

/** app sidebar */
.app-sidebar {
	position: fixed;
	top: 0;
	left: 0;
	min-height: 100%;
	z-index:4;
	width: 250px;
	border-right: 1px solid $color-border;
	line-height:1;
	background-color: #fff;
	.logo {
		padding-left: 32px;
		height: 28px;
		margin-top: 2.5rem;
	}
	.sidebar {
		width: 100%;
		margin-top: 1.6rem;
		li {
			padding-left: 32px;
			line-height: 390%;
			margin-bottom: 0;
			.iconfont {
				@extend .p6
				margin-right: 0.66rem;
				vertical-align: middle;
			}
		}
	}
}

/** app content */
.app-content {
	position: absolute;
	width : 100%;
	z-index: 1;
	min-height: 440px;
	padding-left: 250px;
	.view {
	}
}

.fullscreen {
	margin-right: auto;
	margin-left: auto;
	min-height: 440px;
	padding-bottom: 20px;
}
